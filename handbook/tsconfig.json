{
  "compilerOptions": {
    "target": "ES2020",
    "jsx": "preserve",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "paths": {
      "custodian": ["./packages/custodian/src/index.ts"],
      "migration": ["./packages/migration/src/index.ts"],
      "@/*": ["./src/*"],
      "@/type/*": ["./src/type/*"],
      "mocks/*": ["./mocks/*"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": [
    "scripts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "test/**/*.ts",
    "modules.d.ts",
    "migrations/index.ts",
    "vue-virtual-scroller.d.ts"
  ]
}
